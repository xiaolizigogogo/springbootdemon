<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 <property name="LOG_HOME" value="/usr/local/uton/logs/consumer" /> 
  <property name="PROJECT_NAME" value="consumer-sysservice" />  
	<!-- 控制台 appender -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- 出错日志 appender -->
	<appender name="ERROR"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 按天回滚 daily -->
			<!-- log.dir 在maven profile里配置 -->
			<fileNamePattern>${LOG_HOME}/${PROJECT_NAME}/error-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- 日志最大的历史 60天 -->
			<maxHistory>60</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>
	<!-- 访问日志 appender -->
	<appender name="ACCESS"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 按天回滚 daily -->
			<fileNamePattern>${LOG_HOME}/${PROJECT_NAME}/debug-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- 日志最大的历史 60天 -->
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
				<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<!-- info日志 appender -->
	<appender name="INFO"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 按天回滚 daily -->
			<fileNamePattern>${LOG_HOME}/${PROJECT_NAME}/debug-info-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- 日志最大的历史 60天 -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 只打印错误日志 -->
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

  
    <!--控制台打印资源加载信息-->  
    <root level="DEBUG">
        <appender-ref ref="STDOUT" /> 
        <appender-ref ref="ACCESS" /> 
        <appender-ref ref="ERROR" />
        <appender-ref ref="INFO" />
    </root> 
	<logger name="org.activiti" additivity="false">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
		<logger name="org.mybatis" additivity="false">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
		<logger name="org.apache.ibatis" additivity="false">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
		<logger name="com.utonw.consumerloan.mapper" additivity="false">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
	<logger name="org.springframework.jdbc" additivity="true">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
	
	<logger name="com.utonw.event.mapper" additivity="false">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
		<logger name="org.springframework.data.redis" additivity="false">
		<level value="INFO" />
		<!--daoFILE为实际定义的appender -->
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ACCESS" />
	</logger>
	
</configuration>
